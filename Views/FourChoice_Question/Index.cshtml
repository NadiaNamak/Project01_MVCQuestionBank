                @Html.DisplayFor(modelItem => item.ChapterTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectTitle)

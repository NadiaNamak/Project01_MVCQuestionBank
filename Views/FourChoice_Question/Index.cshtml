            <td>
                @Html.DisplayFor(modelItem => item.Choice02Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice03Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice04Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectChoiceIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
